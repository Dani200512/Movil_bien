<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorButtonPressed"
    android:padding="16dp">

    <TextView
        android:id="@+id/solicitud_empleo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publicar Solicitud de Empleo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/solicitud_empleo_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:layout_below="@id/solicitud_empleo_title"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/solicitud_empleo_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_below="@id/solicitud_empleo_nombre"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/solicitud_empleo_telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="TelÃ©fono"
        android:inputType="phone"
        android:layout_below="@id/solicitud_empleo_email"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/solicitud_empleo_experiencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Experiencia"
        android:inputType="textMultiLine"
        android:layout_below="@id/solicitud_empleo_telefono"
        android:layout_marginBottom="16dp"/>


    <Button
        android:id="@+id/solicitud_empleo_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publicar"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"
        android:layout_below="@id/solicitud_empleo_experiencia"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
